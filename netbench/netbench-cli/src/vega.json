{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 1000,
  "padding": 30,

  "config": {
    "background": "#fff",
    "axis": {
      "grid": true,
      "gridColor": "#ccc",
      "gridOpacity": 1,
      "gridWidth": 0.5,
      "labelPadding": 10,
      "tickSize": 5,
      "tickWidth": 0.5
    },
    "legend": {
      "labelBaseline": "middle",
      "labelFontSize": 11,
      "symbolSize": 50,
      "symbolType": "square"
    }
  },

  "signals": [
    {
      "name": "ui$sendStreams",
      "value": false,
      "bind": {
        "input": "checkbox",
        "name": "Send streams"
      }
    },
    {
      "name": "ui$recvStreams",
      "value": false,
      "bind": {
        "input": "checkbox",
        "name": "Receive streams"
      }
    },
    {
      "name": "sig$visibleStreams",
      "value": 2,
      "update": "(ui$sendStreams?1:0)+(ui$recvStreams?1:0)"
    },
    {
      "name": "cfg$statHeight",
      "value": 500
    },
    {
      "name": "cfg$statPadding",
      "value": 10
    },
    {
      "name": "cfg$streamHeight",
      "value": 60
    },
    {
      "name": "sig$computedStreamHeight",
      "update": "sig$visibleStreams == 2 ? cfg$streamHeight / 2 : ( ui$sendStreams ? cfg$streamHeight : 0)"
    },
    {
      "name": "height",
      "update": "cfg$statHeight + (cfg$statPadding + cfg$streamHeight * sig$streamCount) * (sig$visibleStreams>0?1:0)"
    },
    {
      "name": "sig$legendClicks",
      "value": null,
      "on": [
        {
          "events": "@legendSymbol:click, @legendLabel:click",
          "update": "{name:datum.value}",
          "force": true
        }
      ]
    }
  ],

  "data": [
    {
      "name": "view$stats",
      "source": "data$stats",
      "transform": [
        {
          "type": "filter",
          "expr": "pids[datum.p]&&datum.s==sig$view"
        }
      ]
    },
    {
      "name": "view$streams",
      "source": "data$streams",
      "transform": [
        {
          "type": "filter",
          "expr": "pids[datum.p]&&sig$streamTypes[datum.s]"
        },
        {
          "type": "formula",
          "as": "yScale",
          "expr": "datum.y*sig$streamTypes[datum.s]/sig$visibleStreams"
        }
      ]
    },
    {
      "name": "data$hidden",
      "on": [{ "trigger": "sig$legendClicks", "toggle": "sig$legendClicks" }]
    }
  ],

  "scales": [
    {
      "name": "scale$x",
      "type": "point",
      "range": "width",
      "domain": { "data": "data$stats", "field": "x" }
    },
    {
      "name": "scale$statValue",
      "type": "linear",
      "range": [{ "signal": "cfg$statHeight" }, 0],
      "nice": true,
      "zero": true,
      "domain": { "data": "view$stats", "field": "y" }
    },
    {
      "name": "scale$color",
      "type": "ordinal",
      "range": "category",
      "domain": { "data": "data$stats", "field": "p" }
    },
    {
      "name": "scale$legend",
      "type": "ordinal",
      "range": "category",
      "domain": { "data": "data$drivers", "field": "name" }
    },
    {
      "name": "scale$streamHeight",
      "type": "linear",
      "range": [0, { "signal": "cfg$streamHeight" }],
      "nice": true,
      "zero": true,
      "domain": { "data": "view$streams", "field": "y" }
    },
    {
      "name": "scale$streamLayout",
      "type": "band",
      "range": [
        {
          "signal": "cfg$statHeight + cfg$statPadding"
        },
        {
          "signal": "height"
        }
      ],
      "domain": {
        "data": "view$streams",
        "field": "i"
      }
    }
  ],

  "axes": [
    {
      "orient": "top",
      "scale": "scale$x",
      "formatType": "time",
      "format": "%ss"
    },
    {
      "orient": "bottom",
      "scale": "scale$x",
      "formatType": "time",
      "format": "%ss"
    },
    {
      "orient": "left",
      "format": "~s",
      "title": { "signal": "ui$view" },
      "scale": "scale$statValue"
    }
  ],

  "legends": [
    {
      "stroke": "scale$legend",
      "title": "Driver",
      "padding": 4,
      "encode": {
        "symbols": {
          "name": "legendSymbol",
          "interactive": true,
          "update": {
            "strokeWidth": { "value": 2 },
            "size": { "value": 50 },
            "opacity": [
              {
                "test": "!indata('data$hidden','name',datum.value)",
                "value": 1
              },
              { "value": 0.15 }
            ]
          }
        },
        "labels": {
          "name": "legendLabel",
          "interactive": true
        }
      }
    }
  ],

  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "view$stats",
          "groupby": "p"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": { "data": "series" },
          "encode": {
            "enter": {
              "strokeWidth": { "value": 2 }
            },
            "update": {
              "x": { "scale": "scale$x", "field": "x" },
              "y": { "scale": "scale$statValue", "field": "y" },
              "stroke": { "scale": "scale$color", "field": "p" }
            }
          }
        }
      ]
    },

    {
      "type": "group",
      "from": {
        "facet": {
          "data": "view$streams",
          "name": "violin",
          "groupby": ["p", "i", "s"]
        }
      },

      "encode": {
        "update": {
          "y": { "signal": "cfg$statHeight" },
          "yc": { "scale": "scale$streamLayout", "field": "i", "band": 0.5 },
          "height": { "signal": "cfg$streamHeight" },
          "width": { "signal": "width" }
        }
      },

      "marks": [
        {
          "type": "area",
          "from": { "data": "violin" },
          "encode": {
            "enter": {
              "fill": { "scale": "scale$color", "field": { "parent": "p" } }
            },
            "update": {
              "x": { "scale": "scale$x", "field": "x" },
              "y": { "signal": "sig$computedStreamHeight" },
              "height": { "scale": "scale$streamHeight", "field": "yScale" }
            }
          }
        }
      ]
    }
  ]
}
