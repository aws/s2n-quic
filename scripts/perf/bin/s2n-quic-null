set -e

case "$PS" in
    server*)
          exec ../../target/release-debug/s2n-quic-qns \
            perf \
            server \
            --port $SERVER_PORT \
            --max-mtu 16000 \
            --tls null \
            --stats
        ;;
    client*)
          exec ../../target/release-debug/s2n-quic-qns \
            perf \
            client \
            --receive "${DOWNLOAD_BYTES}" \
            --send "${UPLOAD_BYTES}" \
            --port $SERVER_PORT \
            --server-name localhost \
            --max-mtu 16000 \
            --tls null \
            --stats
        ;;
esac
