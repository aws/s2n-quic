set -e

case "$PS" in
    server*)
        exec ./bin/record \
          ../../target/release/s2n-quic-qns \
            perf \
            server \
            --port $SERVER_PORT
        ;;
    client*)
        exec ./bin/record \
          ../../target/release/s2n-quic-qns \
            perf \
            client \
            --download-size "${DOWNLOAD_BYTES}b" \
            --upload-size "${UPLOAD_BYTES}b" \
            --duration "${DURATION}s" \
            --port $SERVER_PORT \
            --hostname localhost
        ;;
esac
