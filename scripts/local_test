# This script runs basic checks to verify code will pass through the CI.

set -e

cargo +nightly fmt --all -- --check
RUSTFLAGS="--cfg s2n_quic_unstable" RUSTDOCFLAGS="--cfg s2n_quic_unstable" cargo +stable clippy --all-features --all-targets -- -D warnings
cargo test
