#/usr/bin/env bash

set -e

# ensure the tool is built
if [ ! -f target/release/docdiff ]; then
  mkdir -p target/release
  cd common/docdiff
  cargo build --release
  cp target/release/docdiff ../../target/release/docdiff
  cd ../..
fi

# dont diff unstable apis
RUSTFLAGS="--cfg s2n_internal_ci" RUSTDOCFLAGS="--cfg s2n_internal_ci" ./target/debug/docdiff s2n-quic
